{
  "name": "gulp-project",
  "version": "0.5.0",
  "description": "Gulp Project",
  "main": "index.js",
  "scripts": {
    "dev": "gulp watch",
    "lint:css": "stylelint ./src/**/*.scss  || true",
    "lint:js": "standard ./src/**/*.js || true",
    "lint:fix": "stylelint --fix ./src/**/*.scss && standard --fix ./src/**/*.js",
    "build": "gulp build",
    "dev:clean": "gulp clean:dev",
    "build:clean": "gulp clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:css && npm run lint:js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomasvn/gulp-project.git"
  },
  "author": "Ngoc Tu Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tomasvn/gulp-project/issues"
  },
  "homepage": "https://github.com/tomasvn/gulp-project#readme",
  "devDependencies": {
    "browser-sync": "^2.24.6",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^5.0.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-sass": "^4.0.1",
    "gulp-uglify": "^3.0.1",
    "gulp-useref": "^3.1.5",
    "husky": "^1.0.0-rc.13",
    "run-sequence": "^2.2.1",
    "standard": "^11.0.1",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
